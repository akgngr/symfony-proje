{% extends "fronted/base.html.twig" %}

{% block title %} Çalışma Alanları {% endblock %}

{% block body %}
<section class="home-slider js-fullheight owl-carousel">
        <div class="slider-item js-fullheight" style="background-image:url( {{ asset('/uploads/images/') ~ calisma_alanlari.image }} );">
            <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text justify-content-center align-items-center">

            <div class="col-md-7 col-sm-12 text-center ftco-animate">
                <h1 class="mb-3 mt-5 bread">Çalışma Alanlarımız</h1>
                <p class="breadcrumbs"><span class="mr-2"><a href=" {{ path('home_index')}} ">Anasayfa</a></span> / <span><a href=" {{ path('home_calisma_alanlari')}} ">Çalışma Alanlarımız</a></span> / <span>{{ calisma_alanlari.title }}</span></p>
            </div>

            </div>
        </div>
        </div>
    </section>
    <section class="ftco-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 ftco-animate">
                    <h3 class="mb-3">{{ calisma_alanlari.title }}</h3>
                   <p class="mt-3">{% autoescape %} {{ calisma_alanlari.summary |raw }} {% endautoescape %}</p>
                   <p class="mt-3">{% autoescape %} {{ calisma_alanlari.body |raw }} {% endautoescape %}</p>
                </div>
            </div>
        </div>
    </section>


{% endblock %}